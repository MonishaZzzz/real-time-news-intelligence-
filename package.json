{
  "name": "global-politics-intelligence",
  "version": "1.0.0",
  "description": "Real-time global politics news intelligence system",
  "scripts": {
    "install:frontend": "cd frontend && npm install",
    "install:backend": "cd backend && pip install -r requirements.txt",
    "install:all": "npm run install:frontend",
    "start:frontend": "cd frontend && npm start",
    "start:backend": "cd backend && python main.py",
    "build:frontend": "cd frontend && npm run build",
    "dev": "concurrently \"npm run start:backend\" \"npm run start:frontend\"",
    "test:frontend": "cd frontend && npm test",
    "deploy:netlify": "cd frontend && npm run build && netlify deploy --prod --dir=build"
  },
  "keywords": [
    "news",
    "politics",
    "intelligence",
    "react",
    "fastapi",
    "real-time"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "concurrently": "^7.6.0"
  }
}
